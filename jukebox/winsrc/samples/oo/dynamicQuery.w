&ANALYZE-SUSPEND _UIB-CODE-BLOCK _PROCEDURE InitializeObject C-Win 
PROCEDURE InitializeObject :
/*------------------------------------------------------------------------------
  Purpose:     
  Parameters:  <none>
  Notes:       Refer to the <jukebox>\winsrc\samples for working examples for Sports2000
------------------------------------------------------------------------------*/
&IF "{&WINDOW-SYSTEM}" NE "TTY" &THEN  
  RUN enable_UI.

  oContainer = NEW JBoxContainer().
  oContainer:addStatusBar().
&ENDIF

DO WITH FRAME {&FRAME-NAME}:
  oQuery = NEW JBoxQuery(
    'Customer'
    + ";CustNum"
    + ";Name"
    + ";Salesrep"
    + ";Address"
  + ',Order'
    + ";OrderNum"
  + ',Salesrep'
    + ";RepName"
  + ',buf1_Salesrep'
    + ";RepName").
  
  oQuery:queryJoin = ',EACH Order OF Customer NO-LOCK,EACH Salesrep OF Customer NO-LOCK,EACH buf1_Salesrep  WHERE buf1_Salesrep.SalesRep = Order.SalesRep NO-LOCK'.
  
  oQuery:altPrimaryBufferList = "Order,SalesRep,buf1_Salesrep".
  oQuery:setPreScanQuery("buf1_Salesrep","EACH Order WHERE Order.SalesREp = buf1_Salesrep.salesrep,FIRST Customer OF Order").
  
  oFmCustomer = NEW JBoxFieldMap(FRAME {&FRAME-NAME}:HANDLE).
  oFmCustomer:updateFields = 'CustNum,Name'.
  oFmCustomer:displayFields = 'Ordernum,RepName,RepName4'.
  oFmCustomer:primaryKeyFields = 'CustNum'.

  oFmCustomer:QUERY-OBJECT = oQuery.
  otbCustomer = NEW JBoxToolbar(tbCustomer:HANDLE).

  oQuery:TOOLBAR-OBJECT = otbCustomer.
  oFmCustomer:TOOLBAR-OBJECT = otbCustomer.
END.

&IF "{&WINDOW-SYSTEM}" NE "TTY" &THEN  
  oContainer:initResize().
&ELSE
  DYNAMIC-FUNCTION("setASlibBehaviour",
                    "QueryLogFile|ServerQuery.log," +   
                    "TransLogFile|ServerTrans.log").
&ENDIF

END PROCEDURE.

