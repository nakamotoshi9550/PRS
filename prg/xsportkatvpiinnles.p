&ANALYZE-SUSPEND _UIB-CODE-BLOCK _PROCEDURE LesInnFil Procedure 
PROCEDURE LesInnFil :
/*------------------------------------------------------------------------------
  Purpose:     
  Parameters:  <none>
  Notes:       
------------------------------------------------------------------------------*/
  DEF VAR piLinjeNr AS INT  NO-UNDO.
  DEF VAR pcLinje   AS CHAR NO-UNDO.
  DEF VAR piAntFeil AS INT  NO-UNDO.
  
  /* Tømmer feillogg. */
  FOR EACH tt_Error:
    DELETE tt_Error.
  END.

  RUN TellOppLinjer.

  FIND LAST VPIFilLinje OF VPIFilHode NO-LOCK NO-ERROR.
  IF AVAILABLE VPIFilLinje THEN
      piLinjeNr = VPIFilLinje.LinjeNr + 1.
  ELSE
      piLinjeNr = 1.

  ASSIGN
      iAntLinjer = 0
      .
  INPUT STREAM InnFil FROM VALUE(cFilNavn) NO-ECHO.
  LESERLINJER:
  REPEAT:
    /* Leser linje fra filen */
    IMPORT STREAM InnFil UNFORMATTED pcLinje.

    assign
      iAntLinjer = iAntLinjer + 1
      .

    IF SUBSTRING(pcLinje,1,2) = "**" THEN
    DO:
      ASSIGN
        piAntFeil = piAntFeil + 1
        .
      CREATE tt_Error.
      ASSIGN
        tt_Error.LinjeNr = piAntFeil
        tt_Error.Tekst   = "** Feil på linje " + STRING(iAntLinjer) + ": " + pcLinje
        .
      NEXT LESERLINJER.
    END.

    IF NUM-ENTRIES(pcLinje,";") <> 29 THEN
    DO:
      ASSIGN
        piAntFeil = piAntFeil + 1
        .
      CREATE tt_Error.
      ASSIGN
        tt_Error.LinjeNr = piAntFeil
        tt_Error.Tekst   = "** Feil antall entries på linjen (skal være 29): " + string(NUM-ENTRIES(pcLinje,";")) + "."
        .
      NEXT LESERLINJER.
    END.

    /* Posterer linjen */
    CREATE VPIFilLinje.
    ASSIGN
        VPIFilLinje.FilId      = lFilId
        VPIFilLinje.LinjeNr    = piLinjeNr
        VPIFilLinje.StorTekst  = pcLinje
        VPIFilLinje.VareNr     = IF num-entries(pcLinje,";") >= 5
                                   THEN ENTRY(5,pcLinje,";")
                                   ELSE ""
        piLinjeNr              = piLinjeNr  + 1
        .

    STATUS DEFAULT "Lese linje " + 
                   STRING(iAntLinjer) + 
                   " av " + 
                   STRING(iTotAntLinjer) + 
                   ".".
  END. /* LESERLINJER */
  INPUT STREAM InnFil CLOSE.

  /* Stempler posten som innlest. */
  DO TRANSACTION:
      FIND CURRENT VPIFilHode EXCLUSIVE-LOCK.
      ASSIGN
          VPIFilHode.VPIFilStatus = 3
          .
  END.
  IF AVAILABLE VPIFilHode THEN
      FIND CURRENT VPIFilHode    NO-LOCK.

  IF CAN-FIND(FIRST tt_Error) THEN
    RUN ErrorLogg.

END PROCEDURE.

